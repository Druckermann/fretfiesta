<div class="d-flex justify-content-center" style="text-shadow: 2px 2px 5px grey;">
  <h1>Rent a guitar!</h1>
</div>


<div class="container">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="column" style="float:left; width: 100%; padding: 0 10px; display: block; margin-bottom: 20px">
        <div class="card box=shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2)" style="padding:16px; text-align: center; background-color: #FFFFFF">
          <%= link_to listing.name, listing_path(listing) %>
          <% if listing.photo.attached? %>
           <%= cl_image_tag listing.photo.key, height: 150, width: 150, crop: :fill, class:"mx-auto", style: "border-radius: 2%;" "box-shadow: 5px 5px 3px grey;" %>
           <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
