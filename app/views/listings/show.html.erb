  <%= link_to "Book now", new_booking_path(listing_id: @listing.id), class: "btn btn-custom", style: "background-color: #696969; color: white; font-weight: bold;" %>

  <%= link_to "Return to guitars", listings_path, class: "btn btn-custom", style: "background-color: #696969; color: white; font-weight: bold;" %>
</div>
